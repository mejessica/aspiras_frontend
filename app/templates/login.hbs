{{page-title "Login"}}

<form class="login">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input type="email" class="form-control email" id="exampleInputEmail1" aria-describedby="emailHelp"  value={{this.email}} {{on 'change' (fn this.setInput 'email')}}>
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input type="password" class="form-control senha" id="exampleInputPassword1" value={{this.password}} {{on 'change' (fn this.setInput 'password')}}>
  </div>
 
  <div class="mb-3 form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
  </div>
 
  <button type="button" {{on "click" this.authenticate}}  class="btn btn-primary">Submit</button><br>
    <small></small> <br>
  <h5 class="form-text" >NÃ£o tem uma conta? <LinkTo @route='user'>register</LinkTo></h5>
</form>